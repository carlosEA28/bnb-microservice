generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Booking {
  id           String              @id @default(uuid())
  propertyId   String
  guestId      String
  checkIn      DateTime
  checkOut     DateTime
  totalPrice   Float
  status       BookingStatus       @default(PENDING)
  availability BookingAvailability @default(AVAILABLE)
  paymentUrl   String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum BookingAvailability {
  AVAILABLE
  UNAVAILABLE
}
